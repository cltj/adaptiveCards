{
    "type": "AdaptiveCard",
    "version": "1.2",
    "body": [
        {
            "type": "TextBlock",
            "size": "Medium",
            "weight": "Bolder",
            "text": "New incident/advisory"
        },
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "items": [
                        {
                            "type": "Image",
                            "style": "Person",
                            "url": "http://icon-library.com/images/health-icon-transparent/health-icon-transparent-7.jpg",
                            "size": "Small"
                        }
                    ],
                    "width": "auto"
                },
                {
                    "type": "Column",
                    "items": [
                        {
                            "type": "TextBlock",
                            "weight": "Bolder",
                            "text": "Azure Service Health",
                            "wrap": true
                        },
                        {
                            "type": "TextBlock",
                            "spacing": "None",
                            "text": "Created @{triggerBody()?['Created']}",
                            "isSubtle": true,
                            "wrap": true
                        }
                    ],
                    "width": "stretch"
                }
            ]
        },
        {
            "type": "TextBlock",
            "text": "@{triggerBody()?['Service']} ",
            "wrap": true,
            "color": "Accent",
            "weight": "Bolder",
            "size": "ExtraLarge"
        },
        {
            "type": "TextBlock",
            "text": "@{triggerBody()?['Title']}",
            "color": "Warning",
            "size": "ExtraLarge",
            "wrap": true
        },
        {
            "type": "FactSet",
            "facts": [
                {
                    "title": "Title:",
                    "value": "@{triggerBody()?['Header']}"
                },
                {
                    "title": "ID:",
                    "value": "@{triggerBody()?['MSID']}"
                },
                {
                    "title": "Last Update",
                    "value": "@{triggerBody()?['LastUpdateDate']} @{triggerBody()?['LastUpdateTime']}"
                },
                {
                    "title": "Status:",
                    "value": "@{triggerBody()?['CurrentStatus']}"
                }
            ],
            "separator": true,
            "spacing": "Medium"
        },
        {
            "text": "@{body('Html_to_text')}",
            "type": "TextBlock",
            "id": "details",
            "isVisible": false,
            "wrap": true
        },
        {
            "type": "ActionSet",
            "actions": [
                {
                    "title": "See Details",
                    "type": "Action.ToggleVisibility",
                    "targetElements": [
                        "details"
                    ],
                    "style": "positive"
                },
                {
                    "title": "View",
                    "type": "Action.OpenUrl",
                    "url": "@{triggerBody()?['RawLink']}",
                    "style": "destructive"
                }
            ]
        }
    ],
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json"
}